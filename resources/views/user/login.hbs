<div class="container" style="margin: 100px auto">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Đăng nhập</h1>
                {{#each errors}}
                <div class="alert alert-danger" style="padding: 5px 20px" role="alert">{{this}}</div>
                {{/each}}
                <form action="/user/login" method="POST">
                    <div class="form-group">
                        <label for="username">Tên người dùng</label>
                        <input type="username" id="username" name="username" class="form-control"
                            placeholder="Nhập tên người dùng" />
                    </div>
                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Nhập mật khẩu" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                </form>

                <p class="lead mt-4" style="font-size: 1rem; font-weight:400; text-align:center">
                    Bạn chưa có tài khoản? <a href="/user/register">Đăng ký</a>
                </p>
            </div>
        </div>
    </div>
</div>