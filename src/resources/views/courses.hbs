<div class="mt-4">
    <div class="row">
        <div class="col-lg-3">
            <ul class="list-group">
                <h5>Front-end</h5>
                <li class="list-group-item">
                    <a class="list-group-link" href="">HTML, CSS</a>
                </li>
                <li class="list-group-item">
                    <a class="list-group-link" href="">Javascript</a>
                </li>
            </ul>
            <ul class="list-group">
                <h5>Back-end</h5>
                <li class="list-group-item">
                    <a class="list-group-link" href="">NodeJS</a>
                </li>

            </ul>
            <ul class="list-group">
                <h5>DevOps</h5>
            </ul>
        </div>
        <div class="col-lg-9">
            {{#each courses}}
            <div class="card card-course-item" style="width: 16rem;">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>